<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>Yoav Haik</Authors>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <PackageIcon>icon.png</PackageIcon>
    <PackageProjectUrl>https://github.com/zxopink/TgenNetProtocol</PackageProjectUrl>
    <Description>A simple library to set up a flexable network layer with ease</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/zxopink/TgenNetProtocol</RepositoryUrl>
    <PackageTags>network; protocol; tcp</PackageTags>
    <AssemblyVersion>0.8</AssemblyVersion>

    <IncludeUDP>false</IncludeUDP>
    <DefineConstants Condition="'$(IncludeUDP)' == 'true'">IncludeUDP</DefineConstants>
  </PropertyGroup>

  <!--UDP, NOT_INCLUDE-->
  <ItemGroup Condition="$(IncludeUDP) == false">
    <PackageReference Remove="LiteNetLib" Version="0.9.5.2" />
    <Compile Remove="Udp\**" />
    <EmbeddedResource Remove="Udp\**" />
    <None Remove="Udp\**" />
  </ItemGroup>
  <ItemGroup Condition="$(IncludeUDP)">
    <PackageReference Include="LiteNetLib" Version="0.9.5.2" />
  </ItemGroup>
  <!--END OF UDP SECTION-->
  
  <ItemGroup>
    <Compile Remove="NetworkBaseClasses\MonoNetwork.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="icon.ico" />
  </ItemGroup>
  

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\TgenSerializer\TgenSerializer\TgenSerializer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
